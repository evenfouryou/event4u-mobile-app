{
  "name": "event4u-smart-card-reader",
  "version": "1.0.0",
  "description": "Event4U - Lettore Smart Card SIAE per MiniLector EVO V3",
  "main": "main.js",
  "author": "Event4U",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.event4u.smartcard",
    "productName": "Event4U Smart Card Reader",
    "copyright": "Copyright Â© 2024 Event4U",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Event4U Smart Card",
      "language": "1040"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "renderer.js"
    ]
  }
}
